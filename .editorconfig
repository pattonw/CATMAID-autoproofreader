# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
[*.{js,py}]
charset = utf-8

# Python
[*.py]
indent_style = space
indent_size = 4

# Javascript
[*.js]
indent_style = space
indent_size = 2

# CSS
[*.css]
indent_style = space
indent_size = 2

# YAML
[*.yaml]
indent_style = space
indent_size = 2
